<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prize_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- TopBar -->
    <LinearLayout
        android:id="@+id/PrizeListTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuButtonPrize"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Menu"
            android:src="@drawable/ic_menu"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/titleFragmentPrize"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="5"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Premios"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/addButtonPrize"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Buscar"
            android:src="@drawable/ic_add"
            app:tint="#FFFFFF" />
    </LinearLayout>


    <EditText
        android:id="@+id/search_box_prize"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_background"
        android:gravity="center"
        android:autofillHints="name"
        android:inputType="text"
        android:hint="¿Qué coleccionista quieres ver?"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PrizeListTopBar" />


</androidx.constraintlayout.widget.ConstraintLayout>